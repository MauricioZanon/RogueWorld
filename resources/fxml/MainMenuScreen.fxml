<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.rogueworld.gui.menus.MainScreenController" onKeyPressed="#handlePressedKey" prefHeight="200.0" prefWidth="100.0" spacing="5.0" style="-fx-background-color: TAN;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button mnemonicParsing="false" onMouseClicked="#startNewGame" style="-fx-background-color: KHAKI;" text="New game" />
      <Button mnemonicParsing="false" onMouseClicked="#openNewCharacterMenu" style="-fx-background-color: KHAKI;" text="Create new character" />
      <Button mnemonicParsing="false" onMouseClicked="#loadGame" style="-fx-background-color: KHAKI;" text="Load game" />
      <Button layoutX="20.0" layoutY="50.0" mnemonicParsing="false" onMouseClicked="#exitGame" style="-fx-background-color: KHAKI;" text="Exit" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
